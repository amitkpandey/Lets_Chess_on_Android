<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/promotion_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jr.chess.PromotionFragment"
    android:background="@color/colorKing">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_width="300dp"
        tools:layout_height="150dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <Button
                android:id="@+id/promotion_knight_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/promotion_bishop_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/promotion_rook_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/promotion_queen_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                tools:ignore="ButtonStyle" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
