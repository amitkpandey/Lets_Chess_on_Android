<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.jr.chess.GameActivity"
    android:orientation="vertical"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/game_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/board_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:clipChildren="false">

        <LinearLayout
            android:id="@+id/black_pad"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/active_color_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="active_color_text"/>
        </LinearLayout>

        <com.jr.chess.Views.Board
            android:id="@+id/board_view"
            android:layout_width="100dp"
            android:layout_height="100dp"

            tools:layout_width="100dp"
            tools:layout_height="100dp"/>
        <!--android:background="@drawable/board"-->

        <LinearLayout
            android:id="@+id/white_pad"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:id="@+id/state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="state_text"/>
            <TextView
                android:id="@+id/winner_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="winner_text"/>
        </LinearLayout>
    </LinearLayout>

    <com.jr.chess.Views.BoardGrid
        android:id="@+id/board_grid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/black_tile"
        />

</RelativeLayout>